@using Microsoft.AspNetCore.Identity
@using WebClient.Data
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))

{

    <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Customer" asp-controller="MProfile" asp-action="Edit" asp-route-id="@UserManager.GetUserId(User)" title="Edit">Hello @UserManager.GetUserAsync(User).Result.FullName!</a>

    </li>
    <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Customer" asp-controller="Cart" asp-action="Cart" asp-route-id="@UserManager.GetUserId(User)">
               
                <i class="fa fa-shopping-cart"></i>
        </a>
    </li>
    <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Customer" asp-controller="Order" asp-action="Index" asp-route-id="@UserManager.GetUserId(User)">
               
                <i class="fa fa-shipping-fast"></i>
            </a>
     </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="/">
            <button  type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>

