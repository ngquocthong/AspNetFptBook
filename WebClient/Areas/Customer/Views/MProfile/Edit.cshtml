@using Microsoft.AspNetCore.Identity
@using WebClient.Data
@model ApplicationUser
<main class="page catalog-page">
<div class="container">
		@if (TempData["Message"] != null)
		{
			<div class="alert alert-success">@TempData["Message"]</div>
		}
		<div class="card shadow-lg o-hidden border-0 my-5">
		<div class="card-body p-0">
			<div class="row">
				<div class="col-lg-6 d-none d-lg-flex">
					<div class="flex-grow-1 bg-login-image">
							<img src="~/assets/img/tech/profile.png" style="width: 545px;height: 700px;">
					</div>
				</div>
				<div class="col-lg-6">
					<div class="p-5">
						<div class="text-center">
							<h4 class="text-dark mb-4">Your Profile Setting</h4>
						</div>

						<form asp-action="Edit" asp-route-id="@Model.Id" method="post" class="user">
							<div class="mb-3">
								<label asp-for="FullName"></label>
								<input asp-for="FullName" class="form-control form-control-user" />
								<span asp-validation-for="FullName" class="text-danger"></span>
							</div>

							<div class="mb-3">
								<label asp-for="DofB"></label>
								<input asp-for="DofB" class="form-control form-control-user" type="date" />
								<span asp-validation-for="DofB" class="text-danger"></span>
							</div>

							<div class="mb-3">
								<label asp-for="Gender"></label>
								<select asp-for="Gender" class="form-control form-control-user">
									<option value="Male">Male</option>
									<option value="Female">Female</option>
								</select>
								<span asp-validation-for="Gender" class="text-danger"></span>
							</div>

							<div class="mb-3">
								<label asp-for="Address"></label>
								<textarea asp-for="Address" class="form-control form-control-user"></textarea>
								<span asp-validation-for="Address" class="text-danger"></span>
							</div>

							<button type="submit" class="btn btn-primary d-block btn-user w-100">Save</button>
						</form>
						<div class="text-center"></div>

					</div>
				</div>
			</div>
		</div>
	</div>
</div>
</main>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/assets/js/script.min.js"></script>

@section scripts{
	<partial name="_ValidationScriptsPartial" />
}