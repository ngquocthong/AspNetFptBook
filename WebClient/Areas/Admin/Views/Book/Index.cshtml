<form id="book-form">
    <label for="book_name">Title:</label>
    <input type="text" id="book_name" name="book_name" required>

    <label for="book_price">Author:</label>
    <input type="text" id="book_price" name="book_author" required>

    <label for="book_price">Quantity</label>
    <input type="number" id="book_price" name="book_price" required>
    
    <label for="quantity">Quantity</label>
    <input type="number" id="quantity" name="quantity" required>
    <label for="cate_id">Quantity</label>
    <input type="number" id="cate_id" name="cate_id" required>

    <button type="submit">Submit</button>
</form>

<script>
    const form = document.getElementById('book-form');
    form.addEventListener('submit', async (event) => {
        event.preventDefault();
        const formData = new FormData(form);
        try {
            const response = await fetch('https://localhost:7186/api/Book', {
                method: 'POST',
                body: formData
            }); 
            if (!response.ok) {
                throw new Error('Failed to submit form');
            }
            alert('Form submitted successfully');
        } catch (error) {
            console.error(error);
            alert('Failed to submit form');
        }
    });
</script>
