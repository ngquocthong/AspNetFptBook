@using BusinessObjects;
@model Category;
<div class="container-fluid">
    <div class="row mb-3">
        <div class="col-lg-8">

            <div class="row">
                <div class="col">
                    <div class="card shadow mb-3"></div>
                    <div class="card shadow">
                        <div class="card-header py-3">
                            <p class="text-primary m-0 fw-bold">Request Category</p>
                        </div>
                        @if (TempData["Message"] != null)
                        {
                            <div class="alert alert-success">@TempData["Message"]</div>
                        }
                        <div class="card-body">
                            <form asp-action="Edit" method="post">
                                <div class="mb-3"><label class="form-label" for="address"><strong>Category Name</strong></label><input asp-for="cate_name" class="form-control" type="text"></div>
                                <div class="row">
                                    <div class="col">
                                        <div class="mb-3"><label class="form-label" for="city"><strong>Category Description</strong></label><textarea asp-for="cate_des" class="form-control" rows="4"></textarea></div>
                                    </div>
                                </div>
                                <div class="mb-3"><button class="btn btn-primary btn-sm" type="submit">Edit</button></div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="card shadow mb-5"></div>
</div>



