@page
@model RegisterModel
@{
	ViewData["Title"] = "Register";
	var roles = (List<IdentityRole>)ViewData["roles"];
}

<h1>@ViewData["Title"]</h1>

<main class="page registration-page">
	<section class="clean-block clean-form dark">
		<div class="container">
			<div class="block-heading">
				<h2 class="text-info">Create Account</h2>
			</div>

			<form class="user" asp-route-returnUrl="@Model.ReturnUrl" method="post">

				<div class="mb-3">
					<label asp-for="Input.FullName"></label>
					<input asp-for="Input.FullName" class="form-control form-control-user" />
					<span asp-validation-for="Input.FullName" class="text-danger"></span>
				</div>
				<div class="mb-3">
					<label asp-for="Input.Email"></label>
					<input asp-for="Input.Email" class="form-control form-control-user" />
					<span asp-validation-for="Input.Email" class="text-danger"></span>
				</div>
				@if (TempData["Message"] != null)
				{
					<div class="alert alert-danger">@TempData["Message"]</div>
				}
				<div class="mb-3">
					<label asp-for="Input.Password"></label>
					<input asp-for="Input.Password" class="form-control form-control-user" />
					<span asp-validation-for="Input.Password" class="text-danger"></span>
				</div>

				<div class="mb-3">
					<label asp-for="Input.ConfirmPassword"></label>
					<input asp-for="Input.ConfirmPassword" class="form-control form-control-user" />
					<span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
				</div>
				<div class="mb-3">
					<label asp-for="Input.DofB"></label>
					<input asp-for="Input.DofB" class="form-control form-control-user" type="date" />
					<span asp-validation-for="Input.DofB" class="text-danger"></span>
				</div>

				<label class="form-label">Gender</label>
				<div class="d-xl-flex justify-content-xl-start" style="margin-right: 16px;">
					<div class="form-check">
						<input asp-for="Input.Gender" value="M" class="form-check-input" type="radio" id="formCheck-2">
						<label class="form-check-label" for="formCheck-2">Male</label>
					</div>
					<div class="form-check" style="margin-left: 21px;">
						<input asp-for="Input.Gender" value="F" class="form-check-input" type="radio" id="formCheck-1">
						<label class="form-check-label" for="formCheck-1">Female</label>
					</div>
				</div>

				<span asp-validation-for="Input.Gender" class="text-danger"></span>


				<div class="mb-3">
					<label asp-for="Input.Address"></label>
					<input asp-for="Input.Address" class="form-control form-control-user" />
					<span asp-validation-for="Input.Address" class="text-danger"></span>
				</div>
				<div class="mb-3">
					<label asp-for="Input.UserRole"></label>
					<select asp-for="Input.UserRole" class="form-control form-control-user" asp-items='new SelectList(roles,"Id","Name")'>
					</select>
					<span asp-validation-for="Input.UserRole" class="text-danger"></span>
				</div>
				<button type="submit" class="btn btn-primary d-block btn-user w-100">Register</button>
			</form>
		</div>

	</section>
</main>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/assets/js/script.min.js"></script>
@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}