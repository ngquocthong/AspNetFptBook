    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.js"></script>
    <script>
        const revenue = document.getElementById("revenue");
        var xValues = [];
        for (let i = 1; i <= 30; i++) {
            xValues.push(i);
        }
        fetch("https://localhost:7186/api/Orders")
            .then(function (response) {
                return response.json();
            })
            .then(function (data) {
                const revenueByDay = Array.from({ length: 30 }, () => 0);
                for (let i = 0; i < data.length; i++) {
                    const order = data[i];
                    const date = new Date(order.createdDate);
                    const day = date.getDate();
                    revenueByDay[day - 1] += order.totalPrice;
                }
                const total = revenueByDay.reduce((a, b) => a + b, 0);
                revenue.innerHTML = "$" + total;
                new Chart("myChart", {
                    type: "line",
                    data: {
                        labels: xValues,
                        datasets: [{
                            fill: false,
                            lineTension: 0,
                            backgroundColor: "rgba(0,0,255,1.0)",
                            borderColor: "rgba(0,0,255,0.1)",
                            data: revenueByDay
                        }]
                    },
                    options: {
                        legend: { display: false },
                        scales: {
                            yAxes: [{ ticks: { min: 6, max: 5000 } }],
                        }
                    }
                });
            })
            .catch(function (error) {
                console.error(error);
            });


    </script>